<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Pinterest Clone Profile Page</title>
    <link
    href="https://cdn.jsdelivr.net/npm/remixicon@4.1.0/fonts/remixicon.css"
    rel="stylesheet"
    />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/profile.css">
</head>

<body>
    <header>
        <div class="header-parent">
            <h3 style="color: #eb2225; margin: 10px;">Pinterest</h3>
            <div class="header-child">
                <a style="color: #eb2225;" href="/profile">Profile</a><a style="color: #eb2225;" href="/feed">Feed</a><a style="color: black;" class="logout" href="/logout">Logout</a>
            </div>
        </div>
    </header>
    <div class="containerpers">
        <form id="dpchange" hidden action="/dpupload" method="post" enctype="multipart/form-data">
            <input type="file" name="dp">
        </form>
        <div class="cardpers">
            <div>
                <div class="profile-picture">
                    <img src="/images/profilePics/<%= user.profileImage %>"
                        alt="Profile Picture">
                </div>
                <div class="pencil-parent">
                    <span id="dpupload" class="pencil">
                        <i id="pencil-child"class="ri-pencil-fill"></i>
                    </span>
                </div>
            </div>
            <h2 class="username"><%= user.username %></h2>
            <p class="tagline"><%= user.tagline %></p>
            <p class="description"><%= user.description %></p>
            <a href="/edit" class="button">Edit</a>
            <form style="margin: 10px;" action="/upload" method="post" enctype="multipart/form-data">
                <input type="text" name="imageCaption" placeholder="some caption" >
                <input type="file" name="file">
                <input type="submit">
            </form>
        </div>
    </div>
    <div class="container">
        <div class="cards flex">
            <% user.posts.forEach(function(post){ %>
                <div class="card" style="width: 18rem;">
                    <img src="/images/uploads/<%= post.image %>"
                        class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title"><%= post.caption %></h5>
                    </div>
                </div>                
            <% }) %>
        </div>
    </div>
    <script>
        document.querySelector("#dpupload").addEventListener("click",function(){
            document.querySelector("#dpchange input").click();
        })
        document.querySelector("#dpchange input").addEventListener("change",function(){
            document.querySelector("#dpchange").submit();
        })
    </script>
</body>

</html>